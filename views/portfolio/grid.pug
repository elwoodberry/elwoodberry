extends ../layouts/app-default.pug

block content

  - projectType = #{projtype}

  div(id='type-' + projectType)

  include ../partials/canvas-header.pug

  //- SMALL HEADER
  #canvas-billboard-sml
    .bckgrnd
    .container
      .title-area
        h2(class='title') #{title}

  .container(style='padding-top:0;')

    .grid-block
      h2 #{type} Projects
      .row
        each project in projects
          .col-lg-3
            .display-card
              .img-container(style='background-image:url(' + project.img + ')')
              h4 #{project.name}
              p #{project.excerpt}

              a(href='/portfolio/:' + project.id + '/:' + projectType ) Learn More
