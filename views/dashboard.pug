extends ./layouts/app-default.pug

block content

  div(id='type-' + prjcttype)

  include ./partials/canvas-header.pug

  include ./partials/billboard.pug

  .container(style='padding-top:0;')

    ul
      li Title: #{title}
      li Description: #{description}
      li Robots: #{robots}
      li Canonical: #{canonical}
      li TwitterImage: #{twitterImage}
      li Type: #{prjcttype}



    .grid-block
      h2 #{prjcttype} Projects
      .row
        each project in projects
          .col-lg-3
            .display-card
              .img-container(style='background-image:url(' + project.img + ')')
              h4 #{project.name}
              p #{project.excerpt}

              a(href='/portfolio/:' + project.id + '/:' + prjcttype ) Learn More
